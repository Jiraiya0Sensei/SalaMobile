<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SalaMobile.SportPage"
             Title="SportPage">
  
    <StackLayout>
        <ListView x:Name="sportListView"
                  ItemSelected="OnSportSelected">
            <ListView.ItemTemplate>
                <DataTemplate>
                    
                    <TextCell Text="{Binding Denumire}" />
            
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

        <Button Text="Adauga Sport" Clicked="OnAddSportClicked" />
    </StackLayout>
</ContentPage>


